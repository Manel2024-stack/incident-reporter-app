pipeline {
  agent any

  environment {
    COMPOSE_PROJECT_NAME = "incident-reporter"
  }

  stages {

    stage('ğŸ§¹ Nettoyage environnement') {
      steps {
        echo "ğŸ§¨ Suppression des anciens conteneurs et volumes..."
        sh '''
          docker rm -f incident-reporter-api incident-reporter-mongo || true
          docker volume rm incident-reporter-pipeline_mongo-data || true
        '''
      }
    }

    stage('ğŸ” Login Docker Hub') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'dockerhub-creds',
          usernameVariable: 'DOCKER_USER',
          passwordVariable: 'DOCKER_PASS'
        )]) {
          sh '''
            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
          '''
        }
      }
    }

    stage('âš™ï¸ Build des conteneurs') {
      steps {
        sh 'docker-compose build'
      }
    }

    stage('ğŸ” Scan de sÃ©curitÃ© avec Trivy') {
      steps {
        echo "ğŸ›¡ï¸ Analyse de l'image avec Trivy..."
        sh '''
          if ! command -v trivy > /dev/null; then
            echo "ğŸš¨ Trivy n'est pas installÃ© !"
            exit 1
          fi
          
          trivy image --severity HIGH,CRITICAL --exit-code 1 incident-reporter-api || exit 1
        '''
      }
    }

    stage("ğŸ“¤ Push de l'image vers Docker Hub") {
      steps {
        sh 'docker push manel2024/incident-reporter-api:latest'
      }
    }

    stage('ğŸš€ DÃ©ploiement') {
      steps {
        sh '''
          docker-compose down
          docker-compose up -d
        '''
      }
    }

    stage('ğŸ§ª VÃ©rification de l\'API') {
      steps {
        echo 'â³ Attente du dÃ©marrage de l\'API...'
        sh '''
          sleep 10
          echo 'âœ… Test de l\'API Ã  l\'intÃ©rieur du conteneur...'
          curl --fail http://localhost:3000/status || exit 1
        '''
      }
    }
  }

  post {
    success {
      echo 'âœ… DÃ©ploiement rÃ©ussi !'
    }
