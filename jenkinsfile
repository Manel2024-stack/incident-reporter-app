pipeline {
  agent any

  environment {
    COMPOSE_PROJECT_NAME = "incident-reporter"
  }

  stages {

    stage('ğŸ§¹ Nettoyage environnement') {
      steps {
        echo "ğŸ§¨ Suppression des anciens conteneurs et volumes..."
        sh '''
          docker rm -f incident-reporter-api incident-reporter-frontend incident-reporter-mongo || true
          docker volume rm incident-reporter-pipeline_mongo-data || true
        '''
      }
    }

    stage('ğŸ” Login Docker Hub') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'dockerhub-creds',
          usernameVariable: 'DOCKER_USER',
          passwordVariable: 'DOCKER_PASS'
        )]) {
          sh '''
            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
          '''
        }
      }
    }

    stage('ğŸ§ª Tests unitaires backend') {
      steps {
        dir('backend') {
          echo "ğŸ§ª Lancement des tests backend..."
          sh '''
            npm install
            npm test || exit 1
          '''
        }
      }
    }

    stage('ğŸ” Analyse SonarQube') {
      steps {
        withSonarQubeEnv('SonarQube') {
          withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
            dir('backend') {
              sh 'sonar-scanner -Dsonar.login=$SONAR_TOKEN'
            }
          }
        }
      }
    }

    stage('âš™ï¸ Build des conteneurs') {
      steps {
        sh 'docker-compose build'
      }
    }

    stage('ğŸ” Scan de sÃ©curitÃ© avec Trivy (backend + frontend)') {
      steps {
        echo "ğŸ›¡ï¸ Analyse des images avec Trivy..."
        sh '''
          if ! command -v trivy > /dev/null; then
            echo "ğŸš¨ Trivy n'est pas installÃ© sur l'agent Jenkins."
            exit 1
          fi

          trivy image --severity HIGH,CRITICAL --exit-code 0 incident-reporter-incident-reporter-api
          trivy image --severity HIGH,CRITICAL --exit-code 0 incident-reporter-incident-reporter-frontend
        '''
      }
    }

    stage("ğŸ“¤ Push des images vers Docker Hub") {
      steps {
        sh '''
          docker tag incident-reporter-incident-reporter-api manel2024/incident-reporter-api:latest
          docker tag incident-reporter-incident-reporter-frontend manel2024/incident-reporter-frontend:latest

          docker push manel2024/incident-reporter-api:latest
          docker push manel2024/incident-reporter-frontend:latest
        '''
      }
    }

    stage('ğŸš€ DÃ©ploiement') {
      steps {
        sh '''
          docker-compose down
          docker-compose up -d
        '''
      }
    }

    stage('ğŸ§ª VÃ©rification des services') {
      steps {
        echo 'â³ Attente du dÃ©marrage...'
        sh '''
          sleep 10
          echo "âœ… Test de l'API backend..."
          curl --fail http://localhost:3000/status || exit 1
          echo "ğŸŒ Test du frontend (HTTP 200 attendu)..."
          curl --fail http://localhost || exit 1
        '''
      }
    }
  }

  post {
    success {
      echo 'âœ… DÃ©ploiement complet rÃ©ussi !'
    }
    failure {
      echo 'âŒ Une erreur est survenue pendant le pipeline.'
    }
  }
}
